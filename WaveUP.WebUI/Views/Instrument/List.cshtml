@using WaveUP.WebUI.Models
@using WaveUP.WebUI.HtmlHelpers
@model InstrumentsListViewModel

@{
    ViewBag.Title = "Товари";
}

@foreach (var p in @Model.Instruments)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <h4>@p.Price.ToString("# $")</h4>
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>
