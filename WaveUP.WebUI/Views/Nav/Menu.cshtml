@model IEnumerable<string>

@Html.ActionLink("Додому", "List", "Instrument", null,
    new { @class = "btn btn-block btn-lg btn-outline-secondary" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Instrument",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-lg btn-outline-secondary"
            + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
    })
}