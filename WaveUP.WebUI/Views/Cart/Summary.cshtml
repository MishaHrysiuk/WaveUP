@model WaveUP.Domain.Entities.Cart

<div class="navbar-text">
    <b>Ваша корзина:</b>
    @Model.Lines.Sum(x => x.Quantity) шт.,
    @Model.ComputeTotalValue().ToString("# $")
    
    @Html.ActionLink("Заказати", "Index", "Cart",
   new { returnUrl = Request.Url.PathAndQuery },
   new { @class = "btn btn-light text-secondary" })
</div>



