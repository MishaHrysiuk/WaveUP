@model WaveUP.Domain.Entities.Instrument

<div class="well">
    @if (Model.ImageData != null)
    {
        <div class="pull-left" style="margin-right: 10px">
            <img class="img-thumbnail" width="100" height="100"
                 src="@Url.Action("GetImage", "Instrument",
                new { Model.InstrumentId })" />
        </div>
    }

    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">@Model.Price.ToString("# $")</span>
    </h3>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.InstrumentId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Додати в кошик" />
        </div>
    }
    <span class="lead">@Model.Description</span>
</div>